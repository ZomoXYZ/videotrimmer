{
    "name": "videotrimmer",
    "version": "0.0.3",
    "license": "MIT",
    "description": "easy video trimmer",
    "author": {
        "name": "ashley",
        "email": "ashley@funny.bike"
    },
    "build": {
        "appId": "videotrimmer",
        "files": [
            "index.html",
            "index.css",
            "index.js",
            "main.js",
            "resources/Open_Sans/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "win": {
            "target": "NSIS"
        }
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "devDependencies": {
        "electron": "^9.2.0",
        "electron-builder": "^22.8.0"
    },
    "dependencies": {
        "ffbinaries": "^1.1.4",
        "mime": "^2.4.6"
    }
}
