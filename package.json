{
    "name": "videotrimmer",
    "version": "1.0.0",
    "license": "MIT",
    "description": "easy video trimmer",
    "author": {
        "name": "ashley",
        "email": "ashley@funny.bike"
    },
    "build": {
        "appId": "dev.zomo.videotrimmer",
        "productName": "videotrimmer",
        "files": [
            "index.html",
            "index.css",
            "index.css.map",
            "index.js",
            "main.js",
            "resources/**/*",
            "resources/**/*",
            "modules/*"
        ],
        "mac": {
            "categoty": "public.app-category.utilities",
            "darkModeSupport": true,
            "icon": null,
            "target": [
                "mas",
                {
                    "target": "dmg",
                    "backgroundColor": "#434442",
                    "contents": [
                        {
                            "x": 110,
                            "y": 150
                        },
                        {
                            "x": 240,
                            "y": 150,
                            "type": "link",
                            "path": "/Applications"
                        }
                    ]
                }
            ]
        },
        "win": {
            "icon": null,
            "target": [
                "portable",
                "nsis"
            ]
        },
        "linux": {
            "icon": null,
            "target": [
                "AppImage",
                "deb"
            ]
        }
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZomoXYZ/videotrimmer.git"
    },
    "keywords": [
        "video",
        "trimmer",
        "video-trimmer",
        "electron",
        "electron-app",
        "nvidia-shadowplay"
    ],
    "bugs": {
        "url": "https://github.com/ZomoXYZ/videotrimmer/issues"
    },
    "homepage": "https://github.com/ZomoXYZ/videotrimmer",
    "devDependencies": {
        "electron": "^9.4.4",
        "electron-builder": "^22.10.5"
    },
    "dependencies": {
        "electron-json-storage": "^4.4.0",
        "ffbinaries": "^1.1.4",
        "fluent-ffmpeg": "^2.1.2",
        "mime": "^2.5.2",
        "rimraf": "^3.0.2"
    }
}
