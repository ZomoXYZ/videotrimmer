{
    "name": "videotrimmer",
    "version": "1.0.0",
    "license": "MIT",
    "description": "easy video trimmer",
    "author": {
        "name": "ashley",
        "email": "ashley@funny.bike"
    },
    "build": {
        "appId": "videotrimmer",
        "files": [
            "index.html",
            "index.css",
            "index.css.map",
            "index.js",
            "main.js",
            "resources/Open_Sans/*",
            "modules/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "win": {
            "target": "NSIS"
        }
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZomoXYZ/videotrimmer.git"
    },
    "keywords": [
        "video",
        "trimmer",
        "video-trimmer",
        "electron",
        "electron-app",
        "nvidia-shadowplay"
    ],
    "bugs": {
        "url": "https://github.com/ZomoXYZ/videotrimmer/issues"
    },
    "homepage": "https://github.com/ZomoXYZ/videotrimmer",
    "devDependencies": {
        "electron": "^9.4.4",
        "electron-builder": "^22.10.5"
    },
    "dependencies": {
        "ffbinaries": "^1.1.4",
        "fluent-ffmpeg": "^2.1.2",
        "mime": "^2.5.2"
    }
}
